<section class="container full-page">
  <div class="row">
    <div class="col-12 col-md-7">
      {{scroll-magnet animationLength=750}}
      <h2>View & Compare</h2>
    </div>
    <div class="col-12 col-md-7">
      <p class="lead">Here's all the datasets Plenar.io found that match your search.</p>
      <p>
        Click on datasets to select them or deselect them, then click <kbd class="bg-faded text-gray-dark">Compare</kbd> to see what they
        look like together.
      </p>
    </div>
    <div class="col-12 col-md-5 mb-3">
      <div class="card card-outline-info">
        <a class="d-block card-header card-info text-white" {{action "toggleCollapse" "results-tip-body"}}>
          {{fa-icon "info-circle"}}&ensp;Tips
        </a>
        {{#bs-collapse collapsed=(and isNotCollapsed.resultsTipBody (not media.isMd))}}
          <div class="card-block" id="results-tip-body">
            <p class="card-text small text-muted">
              If you want to modify your search, scroll back up and tweak things (don't forget to click
              <kbd class="bg-faded text-muted">Search</kbd> again!) or click <kbd class="bg-faded text-muted">Reset</kbd> to
              start over.
            </p>
          </div>
        {{/bs-collapse}}
      </div>
    </div>
  </div>
  {{#unless (eq nodeFeaturePseudoDatasets.length 0)}}
    <div class="row">
      <div class="col-12">
        <h3 class="h5">Data From Sensor Nodes</h3>
      </div>
    </div>
    {{!-- Height value below is (5 * (row height)), where (row height) = ((1.5 * 1rem) + (2 * 0.3rem)) --}}
    {{lt-search-results nodeFeatureDataTable height="10.5rem"}}
  {{/unless}}
  {{#unless (eq nodeFeaturePseudoDatasets.length 0)}}
    <div class="row">
      <div class="col-12">
        <h3 class="h5">Data From Open Data Providers</h3>
      </div>
    </div>
    {{!-- Height value below is (6 * (row height)), where (row height) = ((1.5 * 1rem) + (2 * 0.3rem)) --}}
    {{lt-search-results openDataTable height="12.6rem"}}
  {{/unless}}
  <div class="col-12 px-0">
    <button class="btn btn-primary btn-lrg btn-block" disabled={{not userHasMadeASelection}}>
      Compare&ensp;{{fa-icon "arrow-right"}}
    </button>
  </div>
</section>

