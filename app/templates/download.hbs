{{outlet}}
<div class="row">
    <div class="col-md-12 text-center" style="margin: 5% 0">
    {{#if queued}}
      {{#if complete}}
        <h1>Your dataset is ready!</h1>
        <p>Click the button below to download it.</p>
      {{else}}
        <h1>Your dataset is on its way!</h1>
        <p>We're constructing it right now just for you.</p>
      {{/if}}
    {{else}}
        <h1>Queuing up your dataset...</h1>
        <p>This might take some time as our worker bots get ready.</p>
    {{/if}}
    </div>
</div>
<div class="row">
    <div class="col-md-12">
    {{#if queued}}
      {{#if complete}}
          <div class="progress" style="margin: 0 5%">
              <div class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="100"
                   aria-valuemin="0" aria-valuemax="100" style="width:100%">
                {{progress}}%&nbsp;&nbsp;&nbsp;(computed {{parts}} of {{total}} parts)
              </div>
          </div>
      {{else}}
          <div class="progress" style="margin: 0 5%">
              <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="{{progress}}"
                   aria-valuemin="0" aria-valuemax="100" style="width:{{progress}}%">
                {{progress}}%&nbsp;&nbsp;&nbsp;(computed {{parts}} of {{total}} parts)
              </div>
          </div>
      {{/if}}
    {{else}}
        <div class="progress" style="margin: 0 5%">
            <div class="progress-bar progress-bar-striped progress-bar-info active" role="progressbar" aria-valuenow="100"
                 aria-valuemin="0" aria-valuemax="100" style="width:100%">
                Queuing...
            </div>
        </div>
    {{/if}}
    </div>
</div>
<div class="row">
    <div class="col-md-12 text-center" style="margin: 5% 0">
        {{#if complete}}
            <button type="button" {{action "download"}} class="btn btn-primary btn-large">Download Dataset</button>
        {{else}}
            <button type="button" class="btn btn-primary btn-large disabled">Loading Dataset...</button>
        {{/if}}
    </div>
</div>
