{{!-- If we add other disabled states we should make this check more generic --}}
{{#unless row.content.isTooLarge}}
  {{fa-icon (if row.selected "toggle-on" "toggle-off") fixedWidth=true
            class=(concat "dataset-color-" row.content.colorIndex)}}
{{else}}
  {{fa-icon "times" fixedWidth=true class="text-muted"}}
{{/unless}}
