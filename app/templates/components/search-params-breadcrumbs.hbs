<div class="row mb-1">
  <div class="col-12">
    {{#bs-button type="outline-primary" size="sm" onClick=action}}
      {{fa-icon "arrow-left"}}&ensp;Back to search results
    {{/bs-button}}

    <span class="text-muted">
      {{#if searchQueryParams.withinArea}}
        <span class="badge bg-faded text-muted font-weight-normal">
          {{fa-icon "map-o"}} Area Specified
        </span>
      {{/if}}
      {{#if (and searchQueryParams.startDate searchQueryParams.endDate)}}
        <span class="badge bg-faded text-muted font-weight-normal">
          {{fa-icon "calendar-o"}} {{format-date searchQueryParams.startDate searchQueryParams.endDate}}
        </span>
      {{/if}}
      {{#if searchQueryParams.aggregateBy}}
        <span class="badge bg-faded text-muted font-weight-normal">
          {{fa-icon "th-large"}} Aggregate by: {{searchQueryParams.aggregateBy}}
        </span>
      {{/if}}
    </span>
  </div>
</div>