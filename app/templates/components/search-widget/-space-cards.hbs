{{!-- At large screen size, we break the instructions out into their own card--}}
<div class="col-lg-4 hidden-md-down float-lg-left pr-lg-1">
  <div class="card">
    <div class="card-header">Space</div>
    <div class="card-block">
      <p class="card-text">
        Use the draw controls on the map to draw a shape.
      </p>
      <p class="card-text text-muted small">
        If you draw a line, Plenar.io will search near it. If you draw a closed shape, Plenar.io will search
        within that shape.
      </p>
    </div>
  </div>
</div>

<div class="col-lg-8 float-lg-right pl-lg-1">
  <div class="card">
    <div class="card-header hidden-lg-up">Space</div>
    <div class="row">
      {{!-- At small sizes, the instructions are a column within the map's card --}}
      <div class="col-md-4 hidden-lg-up">
        <div class="card-block">
          <p class="card-text">
            Use the draw controls on the map to draw a shape.
          </p>
          <p class="card-text text-muted small">
            If you draw a line, Plenar.io will search near it. If you draw a closed shape, Plenar.io will search
            within that shape.
          </p>
        </div>
      </div>
      <div class="col-md-8 col-lg-12">
        <div class="embed-responsive embed-responsive-1by1">
          {{#leaflet-map class="embed-responsive-item" lat=41.889839 lng=-87.623143 zoom=10
                         onMoveend=(action "mapDidMove") as |layers|}}
            {{layers.tile url="https://cartodb-basemaps-{s}.global.ssl.fastly.net/light_all/{z}/{x}/{y}{r}.png"}}
            {{!-- FIXME: blocked by ember-leaflet issue: https://github.com/miguelcobain/ember-leaflet/issues/147 --}}
            {{#if userShapeGeoJson}}
              {{layers.geojson geoJSON=userShapeGeoJson}}
            {{/if}}
            {{draw-control draw=(hash circle=false marker=false) onDrawCreated=(action "userDidDrawShape")}}
          {{/leaflet-map}}
        </div>
      </div>
    </div>
  </div>
</div>
