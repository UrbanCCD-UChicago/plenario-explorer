<div class='col-md-12'>
    <p><a {{action "exit"}}>&lt; back to Explorer</a></p>
</div>
<div class="row">
    <div class="col-md-5">
        <h3 class='detail-header'>
          {{model.attribution}}: {{model.humanName}}
        </h3>

        <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                <i class='fa fa-download'></i>
                Download
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
                <li><a {{action "download" "json"}}><i class='fa fa-download'></i>GeoJSON</a></li>
                <li><a {{action "download" "shapefile"}}><i class='fa fa-download'></i>ESRI Shapefile</a></li>
                <li><a {{action "download" "kml"}}><i class='fa fa-download'></i>KML</a></li>
            </ul>
        </div>

        <br/><br/>

      {{metadata-display m=model}}

    </div>
    <div class="col-md-7">
      {{#if loading}}
          <h3 class='detail-header'>Loading...</h3>
        {{widget-spin}}
        {{leaflet-map}}
      {{else}}
          <h3 class='detail-header' id="record-count">
              {{model.numShapes}} Records Found
          </h3>
        {{leaflet-map geoJSON=geoJSON}}

      {{/if}}

    </div>
</div>
